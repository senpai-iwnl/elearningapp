@{
Layout = "~/Views/Shared/_Layout.cshtml";
ViewData["Title"] = "Logowanie";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card p-4 shadow" style="width: 100%; max-width: 400px; border-radius: 15px;">
        <h2 class="text-center mb-4" style="color: #343a40; font-weight: 700;">Logowanie</h2>

        @if (ViewBag.ErrorMessage != null)
        {
        <div class="alert alert-danger text-center">@ViewBag.ErrorMessage</div>
        }

        <form method="post">
            <div class="form-floating mb-3">
                <input type="email" name="email" class="form-control" id="floatingEmail" placeholder="name@example.com" required />
                <label for="floatingEmail">Email</label>
            </div>
            <div class="form-floating mb-3">
                <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Hasło" required />
                <label for="floatingPassword">Hasło</label>
            </div>
            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary btn-lg">Zaloguj</button>
            </div>
            <p class="text-center">Nie masz konta? <a href="@Url.Action("Register")" class="text-decoration-none text-primary">Zarejestruj się</a></p>
        </form>
    </div>
</div>