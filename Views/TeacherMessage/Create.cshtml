@model e_learning_app.Models.Message

@{
    ViewData["Title"] = "Nowa Wiadomość";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Nowa Wiadomość</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="content">Treść Wiadomości</label>
        <textarea asp-for="Content" class="form-control" rows="3" required></textarea>
    </div>

    <div class="form-group">
        <label for="SubjectId">Przedmiot (opcjonalnie)</label>
        <select asp-for="SubjectId" class="form-control">
            <option value="">Ogólna wiadomość</option>
            @foreach (var subject in ViewBag.Subjects)
            {
                <option value="@subject.Id">@subject.Name</option>
            }
        </select>
    </div>

    <br/>
    
    <button type="submit" class="btn btn-primary">Wyślij</button>
</form>