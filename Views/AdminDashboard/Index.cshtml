@{
Layout = "~/Views/Shared/_Layout.cshtml";
ViewData["Title"] = "Panel Administratora";
}

@model IEnumerable<e_learning_app.Models.User>

<div class="container mt-5">
    <h2 class="mb-4 text-center">Panel Administratora</h2>

    <div class="mb-3 text-end">
        <a href="@Url.Action("Create", "AdminDashboard")" class="btn btn-success">Dodaj użytkownika</a>
    </div>

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-dark">
        <tr>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Email</th>
            <th>Rola</th>
            <th class="text-center">Akcje</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Email</td>
            <td>@user.Role</td>
            <td class="text-center">
                <a href="@Url.Action("Edit", "AdminDashboard", new { id = user.Id })" class="btn btn-warning btn-sm me-2">
                    Edytuj
                </a>
                <a href="@Url.Action("Delete", "AdminDashboard", new { id = user.Id })" class="btn btn-danger btn-sm">
                    Usuń
                </a>
            </td>
        </tr>
        }
        </tbody>
    </table>
</div>

